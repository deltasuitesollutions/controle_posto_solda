# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================
POSTGRES_DB=postos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# CONFIGURAÇÕES DO BACKEND (FLASK)
# ============================================
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
SECRET_KEY=your_secret_key_here_change_in_production

# Configurações do Banco de Dados para o Backend
DB_HOST=postgres
DB_NAME=postos
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# ============================================
# CONFIGURAÇÕES DE CORS
# ============================================
# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# ============================================
# CONFIGURAÇÕES DO FRONTEND (VITE)
# ============================================
# URL da API backend (usado pelo frontend)
VITE_API_URL=http://localhost:8000
# URL do backend para proxy do Vite (interno do Docker)
VITE_API_BACKEND_URL=http://backend:8000

# ============================================
# CONFIGURAÇÕES DOCKER
# ============================================
DOCKER_ENV=false
